@page
@model PortfolioTracker.Frontend.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Skapa konto";
}




<div class="login-container">
    <div class="login-box">
        <h2 class="text-center mb-4">Skapa konto</h2>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">E-postadress</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Lösenord</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Bekräfta lösenord</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 mt-2">Registrera dig</button>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="text-danger mt-3">@Model.ErrorMessage</p>
            }
        </form>

        <p class="mt-3 text-center">
            Har du redan ett konto? <a asp-page="/Auth/Login">Logga in</a>
        </p>
    </div>
</div>